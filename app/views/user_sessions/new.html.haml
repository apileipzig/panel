%h1 Login
- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  = f.label :email, 'E-Mail-Adresse'
  %br/
  = f.text_field :email
  %br/
  %br/
  = f.label :password, 'Passwort'
  %br/
  = f.password_field :password
  %br/
  %br/
  = f.check_box :remember_me
  = f.label :remember_me, 'Eingeloggt bleiben'
  %br/
  %br/
  = f.submit "Login"

